<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_level_one_missing_letters"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.noobtube.spellingforkids.LevelTwoMissingLetters">

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/call"
        android:id="@+id/imageView"
        android:layout_height="wrap_content"
        />
    <EditText
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/editTextCat2"
        android:maxLength="1"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="30sp"
        android:textColor="#0000FF"
        android:layout_below="@+id/imageView" />
    <EditText
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/editTextCat"
        android:maxLength="1"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="30sp"
        android:layout_toStartOf="@id/editTextCat2"
        android:layout_below="@+id/imageView"
        android:textColor="#0000FF" />
    <EditText
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/editText3"
        android:maxLength="1"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="30sp"
        android:layout_toEndOf="@id/editTextCat2"
        android:layout_alignBaseline="@id/editTextCat2"
        android:textColor="#0000FF" />
    <EditText
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/editText4"
        android:maxLength="1"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="30sp"
        android:layout_toEndOf="@id/editText3"
        android:layout_alignBaseline="@id/editText3"
        android:textColor="#0000FF" />




</RelativeLayout>
